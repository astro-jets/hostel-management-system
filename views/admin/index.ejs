<% const months=[ 'jan' ,'feb','mar' ] %>
<!-- Sale & Revenue Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-6 col-xl-3">
                    <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4">
                        <i class="fa fa-chart-line fa-3x text-primary"></i>
                        <div class="ms-3">
                            <p class="mb-2">Clients</p>
                            <h6 class="mb-0" style="color: antiquewhite"><%=users.length%></h6>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-3">
                    <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4">
                        <i class="fa fa-chart-bar fa-3x text-primary"></i>
                        <div class="ms-3">
                            <p class="mb-2">Bookings</p>
                            <h6 class="mb-0" style="color: antiquewhite"><%=bookings.length%></h6>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-3">
                    <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4">
                        <i class="fa fa-chart-area fa-3x text-primary"></i>
                        <div class="ms-3">
                            <p class="mb-2">Total Hostels</p>
                            <h6 class="mb-0" style="color: antiquewhite"><%=hostels.length%></h6>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-xl-3">
                    <div class="bg-dark rounded d-flex align-items-center justify-content-between p-4">
                        <i class="fa fa-chart-pie fa-3x text-primary"></i>
                        <div class="ms-3">
                            <p class="mb-2">Total Revenue</p>
                            <h6 class="mb-0" style="color: antiquewhite">K 1234</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sale & Revenue End -->

        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="bg-dark text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0" style="color: antiquewhite">Recent Bookings</h6>
                    <a href="/admin/bookings">Show All</a>
                </div>
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-dark">
                                <th scope="col" style="color: antiquewhite">Date</th>
                                <th scope="col" style="color: antiquewhite">Invoice</th>
                                <th scope="col" style="color: antiquewhite">Customer</th>
                                <th scope="col" style="color: antiquewhite">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach(booking=> { %>
                                <tr>
                                    <td>
                                        <%= booking.date.getDate()+' '+
                                            months[booking.date.getMonth()]+' '+
                                            booking.date.getFullYear()
                                        %>
                                    </td>
                                    <td><%= booking.user._id%></td>
                                    <td><%= booking.user.username%></td>
                                    <td>
                                        <button class="btn btn-warning col-12 text-light text-lg">
                                            <%=booking.status %>
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Recent Sales End -->

